<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title><%=partido.siglas%></title>
</head>


<body>
    <!-- Navigation Bar -->
    <%let imgsf = partido.logo%> 
    <div class="container">
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand"><%=partido.nombre%>
                </a>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="button">Buscar</button>
                </form>
            </div>
        </nav>

        <!-- GRID 3 Columnas - Information del partido -->
        <div class="container" style="border: 1px solid #ebddd0;">
            <div class="row" style="height: 900px;">


                <!-- COLUMNA: Descripcion -->
                <div class="col-lg-5 d-flex flex-column justify-content-start" style="background-color: #f7eee5;">
                    <div class="" style="width: 300px; margin: 0px auto; padding-top: 15px;">
                        <img src="/images/stock_photo.jpg" style="display: inline-block;" alt="..." width="286px">
                    </div>
                    <div class="text-center">
                        <p class="fs-2">Descripcion</p>
                        <p><%= partido.descripcion %> </p>
                    </div>
                    <div style="margin-top: auto;">
                        <ul>
                            <li>1</li>
                            <li>2</li>
                            <li>3</li>
                            <li>4</li>
                            <li>5</li>
                        </ul>
                    </div>
                </div>


                <!-- COLUMNA: Imagenes -->
                <div class="col text-center d-flex flex-column justify-content-evenly align-items-center" style="background-color: #fffdfb;">
                    <% for (const miembro of partido.miembros) { %> 
                    <div class="card" style="width: 18rem;">
                        <img src="/images/stock_photo.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= miembro.nombre %> <%= miembro.apellido %>  </h5>
                          <p class="card-text"><%= miembro.puesto %> </p>
                        </div>
                      </div>
                      <% } %> 
                </div>


                <!-- COLUMNA: Propuestas -->
                <div class="col d-flex flex-column justify-content-evenly align-items-center" style="background-color: #fffdfb;">
                    <div class="text-center">
                        <p class="fs-2">Propuestas</p>
                    </div>
                    <div class="text-center">
                        <ul class="list-group list-group-flush list-group-numbered">
                            <% for (const propuesta of partido.propuestas) { %> 
                                <li class="list-group-item" style="background-color: #fffdfb;"><%= propuesta.propuesta %> </li>
                                <% } %> 
                          </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="/javascripts/partido.js"></script>
</body>

</html>
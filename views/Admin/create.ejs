<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
    <title>Crear Partido</title>
</head>

<body>
    <div class="container">

        <!-- Navigation Bar -->
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <div>
                    <a href="#" id="previousPage"><i class="bi bi-arrow-left me-2"></i></a>
                    <a class="navbar-brand">Create Partido</a>
                </div>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="button">Buscar</button>
                </form>
            </div>
        </nav>

        <!-- Here we start with our form -->
        <form method="POST" action="/ad/partido">
            <div class="container" style="border: 1px solid #ebddd0;">
                <div class="row" style="height: 900px;">

                    <!-- COLUMNA: Descripcion -->
                    <div class="col-lg-5 d-flex flex-column justify-content-start" style="background-color: #f7eee5;">

                        <!-- Nombre y Siglas -->
                        <div class="row">
                            <div class="col-8">
                                <div class="form-floating">
                                    <input type="text" class="form-control form-control-sm" id="nombre" name="nombre"
                                        placeholder="name@example.com" value="">
                                    <label for="nombre">Nombre del Partido</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating">
                                    <input type="text" class="form-control form-control-sm" id="siglas" name="siglas"
                                        placeholder="name@example.com" value="">
                                    <label for="siglas">Siglas</label>
                                </div>
                            </div>
                        </div>

                        <!-- Imagen del Partido -->
                        <div style="width: 300px; margin: 0px auto; padding-top: 15px;">
                            <div class="card" style="width: 18rem;">
                                <img src="/images/file_photo.jpg" class="card-img-top" alt="...">
                            </div>
                        </div>

                        <!-- Descripcion del partido -->
                        <p class="fs-2 text-center">Descripcion</p>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="descripcion"
                                name="descripcion" style="height: 500px"></textarea>
                            <label for="descripcion">Descripci√≥n</label>
                            <small id="emailHelp" class="form-text text-muted">7999 caracteres restantes.</small>
                        </div>
                    </div>

                    <!-- COLUMNA: Imagenes -->
                    <div class="col text-center d-flex flex-column justify-content-evenly align-items-center"
                        style="background-color: #fffdfb; border: 1px #ebddd0 solid;">
                        <!-- Card style -->
                        <% for (let i=0; i < 3; i++) {%>
                            <div class="card" style="width: 18rem;">
                                <img src="/images/file_photo.jpg" class="card-img-top" alt="...">

                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <select id="estudiante" name="estudiante" class="form-select form-select-sm m-1"
                                            aria-label=".form-select-sm example">
                                            <option selected>Estudiante</option>
                                            <option value="1">Brandon</option>
                                            <option value="2">Manuel</option>
                                            <option value="3">Fabian</option>
                                        </select>

                                        <select id="puesto" name="puesto" class="form-select form-select-sm m-1"
                                            aria-label=".form-select-sm example">
                                            <option selected>Puesto</option>
                                            <option value="1">Presidente</option>
                                            <option value="2">Secretario</option>
                                            <option value="3">Tesorero</option>
                                            <option value="3">Vice-Presidente</option>
                                        </select>
                                    </li>
                                </ul>
                            </div>
                            <% } %>
                    </div>

                    <!-- COLUMNA: Propuestas -->
                    <div class="col d-flex flex-column justify-content-evenly"
                        style="background-color: #fffdfb; border: 1px #ebddd0 solid;">
                        <div class="text-center">
                            <p class="fs-2">Propuestas</p>
                        </div>
                        <!-- Propuestas -->
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="propuesta"
                                name="propuesta" style="height: 100px"></textarea>
                            <label for="propuesta">Propuesta</label>
                            <small id="emailHelp" class="form-text text-muted">400 caracteres restantes.</small>
                        </div>

                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="propuesta"
                                name="propuesta" style="height: 100px"></textarea>
                            <label for="propuesta">Propuesta</label>
                            <small id="emailHelp" class="form-text text-muted">400 caracteres restantes.</small>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="propuesta"
                                name="propuesta" style="height: 100px"></textarea>
                            <label for="propuesta">Propuesta</label>
                            <small id="emailHelp" class="form-text text-muted">400 caracteres restantes.</small>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="propuesta"
                                name="propuesta" style="height: 100px"></textarea>
                            <label for="propuesta">Propuesta</label>
                            <small id="emailHelp" class="form-text text-muted">400 caracteres restantes.</small>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-outline-secondary">Agregar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="/javascripts/buscarPartido.js"></script>
    <script src="/javascripts/previousPage.js"></script>
    <script src="/javascripts/validateParty.js"></script>
</body>

</html>
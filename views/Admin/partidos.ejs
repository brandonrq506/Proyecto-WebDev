<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
    <title>Admin PartidoInicio</title>
</head>

<body>
    <div class="container">
        <!-- Barra de Busqueda -->
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand">Lista de Partidos Politicos registrados</a>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="button">Buscar</button>
                </form>
            </div>
        </nav>


        <!-- BODY -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-3">
        <% for (const partido of partidos) { %>
        <div class="col">
            <div class="card" style="border: 1px solid #ebddd0;">
                <a href="http://localhost:3000/ad/partido/<%- partido.siglas %>" class="text-decoration-none text-reset">
                    <% if (partido.logo=='...' ) { partido.logo='/images/stock_photo.jpg' } %>
                        <img src="<%- partido.logo %>" class="card-img-top" alt="...">
                </a>
                <div class="card-body text-center" style="background-color: #fffdfb;">
                    <h5 class="card-title"><%= partido.nombre %></h5>
                    <% let descriptcion=partido.descripcion.split(".")[0] %>
                        <p class="card-text"><%= descriptcion %>.</p>

                        <!-- Seccion de Botones dentro de las cartas -->
                        <div class="mt-2">
                            <form method="POST" action="/ad/partido/<%= partido.partidoId %>?_method=DELETE ">
                                <a href="http://localhost:3000/ad/partido/<%-partido.siglas%> "
                                    class="card-link btn btn-outline-primary">Editar</a>
                                <button class="btn btn-outline-danger">Eliminar</button>
                            </form>
                        </div>
                </div>
            </div>
        </div>
        <% } %>

            <!-- Carta para agregar un partido -->
            <div class="col">
                <div class="card" style="border: 1px solid #ebddd0;">
                    <a href="/ad/partido/new" class="text-decoration-none text-reset">
                        <div class="card-body text-center text-primary">
                            <p style="margin: auto; padding-bottom: 30px; font-size: 120px;">+</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="/javascripts/buscarPartido.js"></script>
</body>

</html>